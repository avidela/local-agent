    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: FastAPI (api.py)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "apps.backends.adk.api:app",
                "--reload",
                "--port",
                "8002"
            ],
            "cwd": "${workspaceFolder}",
            "jinja": true
        },
        {
            "name": "Python Debugger: Streamlit Frontend",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "apps/frontends/streamlit/src/app.py",
                "--server.port",
                "8502",
                "--server.address",
                "0.0.0.0"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/apps/frontends/streamlit",
                "ADK_BACKEND_URL": "http://localhost:8001"
            },
            "jinja": true
        },
        {
            "name": "Python Debugger: PydanticAI FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "apps.backends.pydantic_ai.src.main:app",
                "--reload",
                "--port",
                "8003"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "DATABASE_URL": "postgresql+asyncpg://pydantic_ai_user:pydantic_ai_password@localhost:5434/pydantic_ai_db",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "jinja": true
        }
    ]
}